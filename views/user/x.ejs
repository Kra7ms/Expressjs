<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <!-- navigation -->
    <%- include('../partials/nav') %>
    <div class="container mt-3">
        <!-- menu -->
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="" class="list-group-item list-group-item-action active">Ahmet</a>
                    <a href="" class="list-group-item list-group-item-action">Bugra</a>
                    <a href="" class="list-group-item list-group-item-action">Ceren</a>
                    <a href="" class="list-group-item list-group-item-action">Damla</a>
                </div>
            </div>
            <div class="col md-9">
                <h1 class="h3"><%= title %></h1>
                <% blogs.forEach(blog => { %>
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="/static/images/<%= blog.image %>" class="img-fluid" alt="">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= blog.blogtitle %></h5>
                                    <p><%= blog.blogexplanation %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
                <!-- pagination -->
                <%- include('../partials/pagination') %>
        </div>
    </div>
</body>
</html>